        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Remote",
            "address": "127.0.0.1",
            "port": 9229, // Set in package.json
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app",
            "skipFiles": ["<node_internals>/**"],
            "restart": true
        }
    ]
}
