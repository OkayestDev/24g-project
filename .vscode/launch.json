{
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Tests",
            "address": "127.0.0.1",
            "port": 9228,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app",
            "skipFiles": ["<node_internals>/**"],
            "disableOptimisticBPs": true
